#!/usr/bin/env bash

# Include files
. src/definitions

# Trap ctr-c
trap exitAll SIGINT

# init the log file
initLog
ret_args="$@"

# Check privileges
if ! isSudo; then
    logPrint "ERR" "Please run the following command instead!" "sudo $0 $ret_args" "${FAIL}"
fi

# run pre-start setup
preStart

[ $# = 0 ] && { printUsage; exit; } || parseArgs "$@"
